<%= content_tag :div,
  :class=>'show padding10 under-row space-bottom-10 bottom-border border-color' do  %>
  <%= content_tag :div, :class=>'clear ' do %>
    <%= content_tag :h3, "Ticket Details", :class=>'bottom-border' %>
  <% end %>
  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :ticket_time, "Ticket Time" %>
    <%= content_tag :p, @ticket.created_at, :class=>'left' %>
  <% end %>

  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :owner, "Owner" %>
    <%= content_tag :p, @ticket.user, :class=>'left' %>
  <% end %>

  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :subject, "Subject" %>
    <%= content_tag :p, @ticket.ticket_category, :class=>'left' %>
  <% end %>
  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :ip, "IP" %>
    <%= content_tag :p, @ticket.ip, :class=>'left' %>
  <% end %>
  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :type, "Type" %>
    <%= content_tag :p, @ticket.ticket_type, :class=>'left' %>
  <% end %>

  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :solution_time, "Center" %>
    <%= content_tag :p, @ticket.user.location.nil? ? "N / A" : @ticket.user.location.full_hierarchy , :class=>'left' %>
  <% end %>
 
 <%= tag :hr, :class=>'clear' %>
  <%= tag :br %>
  <%= content_tag :div, :class => 'clear' do %>
    <%= content_tag :h3, "Ticket Status", :class=>'bottom-border' %>
  <% end %>

  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :status, "MIS Person" %>
    <%= content_tag :p, @ticket.assigned, :class=>'left' %>
  <% end %>

  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :status, "Refered to" %>
    <%= content_tag :p, @ticket.refered.to_s == "" ? "N / A" : @ticket.refered, :class=>'left' %>
  <% end %>
  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :status, "Priority" %>
    <%= content_tag :p, @ticket.ticket_priority, :class=>'left' %>
  <% end %>

    <% if @ticket.attachment.exists? %>
        <%= content_tag :div, :class=>'clear space-bottom-10' do %>
            <%= content_tag :h3, "Attachment", :class=>'bottom-border space-bottom-10' %>
            <% if @ticket.attachment.content_type =~ /^image/ %>
                <%= link_to @ticket.attachment.url, class: 'pic' do %>
                    <%= image_tag @ticket.attachment.url :thumb %>
                 <% end %>
            <% else %>
                <%= link_to "Download", @ticket.attachment.url( :original, false ) %>
            <% end %>
        <% end %>
    <% end %>
                                                                                                                     
  <%= tag :hr, :class=>'clear' %>
  <%= tag :br %>

  <%= content_tag :div, :class=>'clear ' do %>
    <%= content_tag :h3, "Description", :class=>'bottom-border' %>
    <%= content_tag :p, @ticket.description.html_safe %>
  <% end %>

  <%= render :partial=> 'tickets/comment' %>

<% end %>

<%= link_to "Cancel", "#", :class => "cancel", :style => "margin-left: 10px;" %>

