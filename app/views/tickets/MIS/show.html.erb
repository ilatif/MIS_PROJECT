<%= content_tag :div, :class=>'show padding10 space-bottom-10 ' do  %>
  <%= content_tag :div, :class=>'clear ' do %>
    <%= content_tag :h3, "Ticket Details", :class=>'bottom-border' %>
  <% end %>
  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :ticket_time, "Ticket Time" %>
    <%= content_tag :p, "2011-04-12 10:00am", :class=>'left' %>
  <% end %>

  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :owner, "Owner" %>
    <%= content_tag :p, "Kamal", :class=>'left' %>
  <% end %>

  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :subject, "Subject" %>
    <%= content_tag :p, "Please upgrade the PC", :class=>'left' %>
  <% end %>
  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :ip, "IP" %>
    <%= content_tag :p, "10.112.52.125", :class=>'left' %>
  <% end %>
  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :type, "Type" %>
    <%= content_tag :p, "Hdw", :class=>'left' %>
  <% end %>

  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :solution_time, "Center" %>
    <%= content_tag :p, "C3", :class=>'left' %>
  <% end %>
  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :status, "Hall" %>
    <%= content_tag :p, "4", :class=>'left' %>
  <% end %>

  <%= tag :hr, :class=>'clear' %>
  <%= tag :br %>
  <%= content_tag :div, :class=>'clear ' do %>
    <%= content_tag :h3, "Ticket Status", :class=>'bottom-border' %>
  <% end %>

  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :status, "MIS Person" %>
    <%= content_tag :p, "Farooq", :class=>'left' %>
  <% end %>

  <%= content_tag :div, :class=>'clear sub-value' do %>
    <%= label_tag :status, "Priority" %>
    <%= content_tag :p, "Normal", :class=>'left' %>
  <% end %>

  <%= simple_form_for  :priority,
    :url=>url_for({:action=>"create", :controller=>"tickets"}) do |f| %>

    <%= f.input :status,
      :as=>:radio,
      :label=>'Change Status',
      :collection=>['In Process', 'Waiting', 'Hold'],
      :label_html=>{ :class=>'text-align-right width-auto' },
      :wrapper_html=>{ :class=>'width-auto-span width-auto display-block-important' },
      :checked=>'Waiting'
  %>

    <%= f.button :submit, 'Update', :class=>'right submit width-auto margin-0' %>
  <% end %>

  <%= tag :hr, :class=>'clear' %>
  <%= tag :br %>

  <%= content_tag :div, :class=>'clear ' do %>
    <%= content_tag :h3, "Message", :class=>'bottom-border' %>
    <%= content_tag :p, "Waiting for New Systems" %>
  <% end %>

  <%= tag :hr, :class=>'clear' %>
  <%= tag :br %>

  
  <%= link_to "Add Comment",
    new_comment_path,
    :remote=>true,
    :class=>"button space-top-10"  %>

<% end %>


<%= content_for :js do %>
  <%= javascript_include_tag 'tickets/show' %>
<% end %>
<%= content_for :css do %>
  <%= stylesheet_link_tag 'tickets/show' %>
<% end %>