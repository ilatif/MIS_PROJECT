<%= content_tag :div, :class=>'left-bar-list' do  %>
  <%= content_tag :ul do %>
    <%= content_tag :li do %>
      <%= link_to "Add new ticket", new_ticket_path, :class=>'font-12',:remote=>true %>
    <% end %>
    <%= content_tag :li, "&nbsp".html_safe, :class=>"space-top-20 space-bottom-20"  %>

    <%= content_tag :li do %>
      <%= content_tag :h3, "Show by" %>
    <% end %>
    <%= content_tag :li do %>
      <%= link_to "In Progress (#{ count_tickets 'ticket_status', 'In Progress' })",
        filter_tickets_path(:filter_type=>'ticket_status', :value=>'In Progress'), :remote=>true %>
    <% end %>
    <%= content_tag :li do %>
      <%= link_to "Solved (#{ count_tickets 'ticket_status', 'Solved' })",
        filter_tickets_path( :filter_type=>'ticket_status', :value=>'Solved'), :remote=>true %>
    <% end  %>
    <%= content_tag :li do %>
      <%= link_to "New (#{ count_tickets 'ticket_status', 'New' })",
        filter_tickets_path(:filter_type=>'ticket_status', :value=>'New'), :remote=>true  %>
    <% end  %>


  <% end %>

<% end %>
