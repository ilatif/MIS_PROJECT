<%= simple_form_for :user, url: change_password_profile_index_path do |f| %>

	<%= f.input :old_password, as: :password %>

	<%= f.input :new_password, as: :password %>

        <%= f.input :new_password_confirmation, :as => :password %>

	<%= f.button :submit, value: "Change Password" %>

<% end %>
