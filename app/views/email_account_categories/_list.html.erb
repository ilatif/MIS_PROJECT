<table id="email_account_categories_table" class="tablesorter">
  <thead>
    <tr>
      <th class="header bold">Name</th>
      <th class="header bold">Created at</th>
      <th class="header bold">Actions</th>
    </tr>
  </thead>
  <tbody id="email_account_categories_list_in_table">
    <% email_account_categories.each do |email_account_category| %>
      <tr class="<%= cycle("odd", "even") %>" id = "email-account-category-row-<%= email_account_category.id %>">
        <%= render :partial => "single_email_account_category", :locals => {:email_account_category => email_account_category} %>
      </tr>
    <% end %>
  </tbody>
</table>
