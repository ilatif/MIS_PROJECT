<%= content_tag :div, :class=>"under-row padding10 " do %>
  <%= content_tag :h3, 'New Vendor', :class => 'space-top-10 space-bottom-10' %>
  <%= tag 'hr', :class=>'clear' %>

  <div id="errors">

  </div>

  <%= simple_form_for @vendor, :remote => true, :html => { :class => 'space-left-10' } do |f| %>

    <%= f.input :name  %>

    <%= f.input :description, :as => :text, :input_html => { :class => "WYSIWYG_Editor", :value => "#{@vendor.description}" } %>

    <%= f.input :address, :label => "Address", :input_html => { :type => "text" } %>

    <%= f.input :phone, :label => "Phone" %>

    <%= content_tag :div, "", :class => "clear" %>

    <br />

    <%= f.button 'submit', :value => 'Save', :class => 'new-user  submit width-auto margin-0' %>
    or
    <%= link_to "Cancel", '#', :class => 'space-top-10 cancel' %>

  <% end %>
<% end %>

