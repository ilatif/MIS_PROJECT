<% @harddisk_types.each do |harddisk_type| %>
  <tr>
    <td><%= harddisk_type.name %></td>
    <td><%= harddisk_type.size %></td>
    <td><%= harddisk_type.description %></td>
    <td><%= harddisk_type.capacity %></td>
    <td><%= link_to 'Show', harddisk_type %></td>
    <td><%= link_to 'Edit', edit_harddisk_type_path(harddisk_type) %></td>
