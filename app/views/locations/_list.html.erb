
<%= content_tag :div, :id=>'listings' do %>
  <% @locations.each do |location| %>

    <%= content_tag :ul, :class=>"row", :id=>"centre-#{ location.id }" do %>

      <%= content_tag :li, location.name, :style=>"width:150px;" %>
      <%= content_tag :li, location.parent_location, :style => "width: 200px;" %>
      <%= content_tag :li, location.location_type, :style => "width: 200px;" %>
      
      <%= content_tag :li, :class=>"options" do %>
        <%= content_tag :dl, :class=>"options space-right-10" do %>

          <%= content_tag :dt do %>
            <%= link_to "&nbsp".html_safe, '#' %>
          <% end %>

          <%= content_tag :dd, :class=>"hide" do %>
            <%= content_tag :ul do %>
              <%= content_tag :li do %>
                <%#= link_to 'Show', ticket_path( ticket ), :remote=>true %>
              <% end %>

              <%= content_tag :li do %>
                <%= link_to "Edit Location",
                edit_location_path(location),
                :remote=>true %>
              <% end %>
            <% end %>
          <% end %>

        <% end %>
      <% end %>

    <% end %>

  <% end %>
<% end %>